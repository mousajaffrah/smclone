pipeline {
    agent {
        docker {
            image 'node:18' // or use 'node:20' if needed
        }
    }

    stages {
        stage('Install') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test || echo "No tests configured"'
            }
        }

        stage('Run App') {
            steps {
                sh 'node index.js' // or whatever your main file is
            }
        }
    }
}
