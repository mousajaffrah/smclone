pipeline {
    agent {
        docker {
            image 'node:18'  // or 'node:20' if you need latest
        }
    }

    stages {
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run App') {
            steps {
                sh 'node index.js'  // or your main file
            }
        }

        // Optional: add testing stage
        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
    }
}
